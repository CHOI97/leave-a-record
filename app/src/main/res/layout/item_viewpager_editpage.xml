<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/edit_myimg"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="@dimen/_3sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_gray"

        app:layout_constraintBottom_toTopOf="@+id/view_linebar0"
        app:layout_constraintEnd_toStartOf="@+id/img_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_5sdp" />

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/edit_myimg"
        app:layout_constraintStart_toEndOf="@+id/edit_myimg"
        app:tint="@color/main_color_plus" />

    <EditText
        android:id="@+id/edit_location"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="위치 입력"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_location"
        app:layout_constraintTop_toTopOf="@+id/img_location" />
</androidx.constraintlayout.widget.ConstraintLayout>